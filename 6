#include <iostream>

using namespace std;

int main()
{
    double r1, r2, r3, r;
    cout << "VVedite soprotivlenie R1 ";
    cin >> r1;
    cout << "VVedite soprotivlenie R2 ";
    cin >> r2;
    cout << "VVedite soprotivlenie R3 ";
    cin >> r3;
    cout << "Summa soprotivlenii " << 1 / (1 / r1 + 1 / r2 + 1 / r3) << endl;

    return 0;
}
